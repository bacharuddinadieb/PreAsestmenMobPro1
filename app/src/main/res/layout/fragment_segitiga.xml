<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SegitigaFragment">
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                android:hint="Alas" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                android:hint="Tinggi" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText3"/>
        <Button
                android:text="Hitung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_hitungSegitiga" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Luas = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/bt_hitungSegitiga"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
                android:text="Keliling = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hasilKelilingPersegiPanjang" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/bt_hitungSegitiga" android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:text="..."/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hasilKelilingSegitiga" android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_hasilKelilingPersegiPanjang"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:text="..."/>
        <Button
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_shareHasilSegitiga"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>